(module test
    (import builtin)
    (import bool)
    (import io)

    (export assert test assert-equal)

    ;; Assert that a condition is true, otherwise throw error with message
    (def assert
        (lambda (condition message)
            (if (not condition)
                (error test-failure message))))

    ;; Run a test thunk, catch errors and print results
    (def test
        (lambda (name thunk)
            (let ((result (try thunk (catch test-failure (lambda (e) (println "Test" name "failed:" e) 'failed)))))
                (if (!= result 'failed)
                    (println "Test" name "passed")))))

    ;; Assert two values are equal
    (def assert-equal
        (lambda (expected actual)
            (assert (= expected actual)
                "Values not equal")))
)
