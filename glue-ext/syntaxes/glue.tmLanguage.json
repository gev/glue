{
	"scopeName": "source.glue",
	"name": "Glue",
	"fileTypes": [
		"glue"
	],
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#object_keys"
		},
		{
			"include": "#lists"
		},
		{
			"include": "#symbols"
		}
	],
	"repository": {
		"comments": {
			"match": ";.*$",
			"name": "comment.line.semicolon.glue"
		},
		"keywords": {
			"match": "\\b(def|set|import|lambda|if|module|export|try|catch|error)\\b",
			"name": "keyword.control.glue"
		},
		"strings": {
			"begin": "\"",
			"end": "\"",
			"name": "string.quoted.double.glue"
		},
		"numbers": {
			"match": "\\b\\d+\\b",
			"name": "constant.numeric.glue"
		},
		"object_keys": {
			"match": ":[a-zA-Z0-9\\-/\\.]+",
			"name": "constant.other.symbol.glue"
		},
		"symbols": {
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-]*\\.[a-zA-Z0-9_\\-\\.]*\\b",
					"name": "variable.other.property"
				},
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-]*\\b",
					"name": "variable.other"
				}
			]
		},
		"lists": {
			"begin": "\\(",
			"end": "\\)",
			"name": "meta.list.glue",
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-\\.]*\\b",
					"name": "entity.name.function"
				},
				{
					"include": "#list_content"
				}
			]
		},
		"list_content": {
			"patterns": [
				{
					"include": "#comments"
				},
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#object_keys"
				},
				{
					"include": "#nested_lists"
				},
				{
					"include": "#symbols"
				}
			]
		},
		"nested_lists": {
			"begin": "\\(",
			"end": "\\)",
			"name": "meta.list.nested.glue",
			"patterns": [
				{
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-\\.]*\\b",
					"name": "entity.name.function"
				},
				{
					"include": "#list_content"
				}
			]
		}
	}
}
